@model IEnumerable<LanchesMac.Models.Pedido>

@{
    decimal totalPeriodo = 0;
}

<h2>Pedidos por período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="initailDate">Data inicial</label>
                    <input type="date" class="form-control" name="initialDate" value=@ViewData["initialDate"]/>
                </div>
                <div class="form-group">
                    <label for="finalDate">Data final</label>
                    <input type="date" class="form-control" name="finalDate" value=@ViewData["finalDate"]/>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>



<div class="panel-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.PedidoId)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.PedidoTotal)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.TotalItensPedido)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.PedidoEnviado)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                totalPeriodo += item.PedidoTotal;

                <tr>
                    <td>
                         @Html.DisplayFor(modelItem => item.PedidoId)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Email)
                    </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                     <td>
                        R$ @Html.DisplayFor(modelItem => item.PedidoTotal)
                    </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.TotalItensPedido)
                    </td>
                      <td>
                         @Html.DisplayFor(modelItem => item.PedidoEnviado)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h2> Total do periodo: R$ @totalPeriodo </h2>