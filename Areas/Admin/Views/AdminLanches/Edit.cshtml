@model LanchesMac.ViewModels.LancheViewModel

@{
    ViewData["Title"] = "Editar ";
}

<h1>Editar lanche</h1>

<hr />
<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LancheId" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoCurta" class="control-label"></label>
        <textarea asp-for="DescricaoCurta" class="form-control"></textarea>
        <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoDetalhada" class="control-label"></label>
        <textarea asp-for="DescricaoDetalhada" class="form-control"></textarea>
        <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-group col-md-1">
            <label asp-for="Preco" class="control-label"></label>
            <input asp-for="Preco" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label asp-for="Imagem" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="Imagem" class="custom-file-input" />
                <label class="custom-file-label" for="customFile">Escolha A Foto</label>
            </div>
            <span asp-validation-for="Imagem" class="text-danger"></span>
            <img src="~/produtos/@Model.ImagemExistente" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
        </div>
        <div class="form-group col-md-6">
            <img src="~/produtos/@Model.ImagemExistente" width="500" height="300" />
        </div>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ImagemThumbnail" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="ImagemThumbnail" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escolha A Foto</label>
        </div>
        <span asp-validation-for="ImagemThumbnail" class="text-danger"></span>
        <img src="~/produtos/@Model.ThumbnailExistente" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
    </div>
    <div class="form-group col-md-6">
        <img src="~/produtos/@Model.ThumbnailExistente" width="500" height="300" />
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Marcar como Preferido?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="IsLanchePreferido" /> @Html.DisplayNameFor(model => model.IsLanchePreferido)
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Marcar como em Estoque?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
    </div>
</form>