@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Detalhes ";
}

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome da categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class="col-sm-2">
            Descrição da categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a> |
    <a asp-action="Index">Voltar para categorias</a>
</div>
