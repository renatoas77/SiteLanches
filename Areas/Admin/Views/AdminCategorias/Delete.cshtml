@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Deletar categoria ";
}

<h1>Deletar categoria </h1>

<h3>Tem certeza que deseja fazer isto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da categoria: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
           Descrição: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar categoria" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a categorias</a>
    </form>
</div>
